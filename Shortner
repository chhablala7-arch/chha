<body>
    <div class="container">
        <header>
            <div class="logo">
                <i class="fas fa-link"></i>
                <h1>प्रो URL शॉर्टनर</h1>
            </div>
            <p>HopWeb ऐप के रूप में इंस्टॉल करने योग्य</p>
        </header>
        
        <div class="app-content">
            <div class="input-group">
                <label for="long-url">URL दर्ज करें</label>
                <div class="input-container">
                    <input type="url" id="long-url" placeholder="https://example.com/very-long-url-path" required>
                </div>
            </div>
            
            <div class="input-group">
                <label for="custom-alias">कस्टम नाम (वैकल्पिक)</label>
                <div class="input-container">
                    <input type="text" id="custom-alias" placeholder="मेरी-कंपनी">
                    <button id="shorten-btn" onclick="shortenUrl()">
                        <i class="fas fa-compress-alt"></i> छोटा करें
                    </button>
                </div>
            </div>
            
            <div class="result" id="result">
                <p>आपकी छोटी URL:</p>
                <div class="short-url">
                    <i class="fas fa-link"></i>
                    <span id="short-url-text"></span>
                </div>
                
                <div class="action-buttons">
                    <button class="success" onclick="copyUrl()">
                        <i class="fas fa-copy"></i> URL कॉपी करें
                    </button>
                    <button onclick="createQrCode()">
                        <i class="fas fa-qrcode"></i> QR कोड बनाएं
                    </button>
                    <button class="secondary" onclick="shareUrl()">
                        <i class="fas fa-share-alt"></i> साझा करें
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <button class="install-btn" id="install-btn">
        <i class="fas fa-download"></i> ऐप इंस्टॉल करें
    </button>
    
    <footer>
        <p>© 2023 प्रो URL शॉर्टनर | HopWeb के लिए अनुकूलित</p>
    </footer>
    
    <div class="toast" id="toast"></div>

    <script>
        const longUrlInput = document.getElementById('long-url');
        const customAliasInput = document.getElementById('custom-alias');
        const resultDiv = document.getElementById('result');
        const shortUrlText = document.getElementById('short-url-text');
        const toast = document.getElementById('toast');
        const installBtn = document.getElementById('install-btn');
        
        let deferredPrompt;
        
        document.addEventListener('DOMContentLoaded', () => {
            checkUrlHash();
            setupServiceWorker();
            setupAppInstallPrompt();
        });
        
        function setupServiceWorker() {
            if ('serviceWorker' in navigator) {
                navigator.serviceWorker.register('sw.js')
                    .then((registration) => {
                        console.log('Service Worker registered with scope:', registration.scope);
                    })
                    .catch((error) => {
                        console.log('Service Worker registration failed:', error);
                    });
            }
        }
        
        function setupAppInstallPrompt() {
            window.addEventListener('beforeinstallprompt', (e) => {
                e.preventDefault();
                deferredPrompt = e;
                installBtn.classList.add('show');
            });
            
            installBtn.addEventListener('click', installApp);
        }
        
        function installApp() {
            if (deferredPrompt) {
                deferredPrompt.prompt();
                
                deferredPrompt.userChoice.then((choiceResult) => {
                    if (choiceResult.outcome === 'accepted') {
                        showToast('ऐप इंस्टॉल हो रहा है...', 'success');
                    } else {
                        showToast('ऐप इंस्टॉल रद्द किया गया', 'error');
                    }
                    deferredPrompt = null;
                    installBtn.classList.remove('show');
                });
            }
        }
        
        function checkUrlHash() {
            const hash = window.location.hash.substring(1);
            if (hash) {
                redirectToOriginalUrl(hash);
            }
        }
        
        function redirectToOriginalUrl(shortCode) {
            const urlMap = JSON.parse(localStorage.getItem('urlMap')) || {};
            const urlData = urlMap[shortCode];
            
            if (urlData) {
                window.location.href = urlData.longUrl;
            } else {
                showToast('URL नहीं मिला। यह हटाया जा चुका हो सकता है।', 'error');
            }
        }
        
        function shortenUrl() {
            const longUrl = longUrlInput.value.trim();
            const customAlias = customAliasInput.value.trim();
            
            if (!isValidUrl(longUrl)) {
                showToast('कृपया एक वैध URL दर्ज करें', 'error');
                return;
            }
            
            const shortCode = customAlias ? customAlias : generateShortCode(7);
            
            const urlMap = JSON.parse(localStorage.getItem('urlMap')) || {};
            if (urlMap[shortCode] && !confirm('यह कस्टम नाम पहले से मौजूद है। क्या आप इसे ओवरराइट करना चाहते हैं?')) {
                return;
            }
            
            // Revert to saving an object to ensure functionality
            const urlData = {
                longUrl: longUrl,
                shortCode: shortCode
            };
            
            urlMap[shortCode] = urlData;
            localStorage.setItem('urlMap', JSON.stringify(urlMap));
            
            const shortUrl = `${window.location.origin}${window.location.pathname}#${shortCode}`;
            
            shortUrlText.textContent = shortUrl;
            resultDiv.classList.add('active');
            
            showToast('URL सफलतापूर्वक छोटा किया गया!', 'success');
        }
        
        function copyUrl() {
            const shortUrl = shortUrlText.textContent;
            
            navigator.clipboard.writeText(shortUrl)
                .then(() => {
                    showToast('URL क्लिपबोर्ड पर कॉपी हो गया!', 'success');
                })
                .catch(err => {
                    showToast('कॉपी करने में त्रुटि: ' + err, 'error');
                });
        }
        
        function createQrCode() {
            showToast('QR कोड सुविधा जल्द ही आ रही है!', 'success');
        }
        
        function shareUrl() {
            const shortUrl = shortUrlText.textContent;
            
            if (navigator.share) {
                navigator.share({
                    title: 'मेरी छोटी URL',
                    text: 'इस छोटी URL को देखें:',
                    url: shortUrl
                })
                .then(() => console.log('सफलतापूर्वक साझा किया गया'))
                .catch(error => console.log('साझा करने में त्रुटि:', error));
            } else {
                showToast('आपके ब्राउज़र में साझा करने की सुविधा उपलब्ध नहीं है', 'error');
            }
        }
        
        function generateShortCode(length) {
            const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
            let result = '';
            
            for (let i = 0; i < length; i++) {
                result += characters.charAt(Math.floor(Math.random() * characters.length));
            }
            
            return result;
        }
        
        function isValidUrl(url) {
            try {
                new URL(url);
                return true;
            } catch (e) {
                return false;
            }
        }
        
        function showToast(message, type = '') {
            toast.textContent = message;
            toast.className = 'toast';
            
            if (type) {
                toast.classList.add(type);
            }
            
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
        
        function setManifest() {
            const manifest = {
                "name": "प्रो URL शॉर्टनर",
                "short_name": "URL शॉर्टनर",
                "description": "लंबे URLs को छोटे, साफ़ और साझा करने योग्य लिंक में बदलें",
                "start_url": "/",
                "display": "standalone",
                "background_color": "#4361ee",
                "theme_color": "#4361ee",
                "orientation": "portrait",
                "icons": [
                    {
                        "src": "data:image/svg+xml;base64,",
                        "sizes": "192x192",
                        "type": "image/svg+xml"
                    }
                ]
            };
            
            const manifestJson = JSON.stringify(manifest);
            const manifestBlob = new Blob([manifestJson], {type: 'application/json'});
            const manifestURL = URL.createObjectURL(manifestBlob);
            document.getElementById('manifest').setAttribute('href', manifestURL);
        }
        
        setManifest();
    </script>
</body>
</html>
