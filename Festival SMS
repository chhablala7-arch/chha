  <script>
    // Firework generator
    setInterval(() => {
      let fw = document.createElement("div");
      fw.className = "firework";
      fw.style.top = Math.random()*window.innerHeight + "px";
      fw.style.left = Math.random()*window.innerWidth + "px";
      document.body.appendChild(fw);
      setTimeout(()=>fw.remove(),1000);
    }, 500);

    // URL рд╕реЗ рдирд╛рдо рдкрдврд╝рдирд╛
    const urlParams = new URLSearchParams(window.location.search);
    const senderName = urlParams.get("name");
    if (senderName) {
      document.getElementById("sender").innerText = "рд╢реБрднрдХрд╛рдордирд╛рдПрдВ рднреЗрдЬрдиреЗ рд╡рд╛рд▓реЗ: " + senderName;
    }

    function share(platform) {
      let username = document.getElementById("username").value.trim();
      if (!username) {
        alert("рдХреГрдкрдпрд╛ рдЕрдкрдирд╛ рдирд╛рдо рд▓рд┐рдЦреЗрдВ!");
        return;
      }
      
      document.getElementById("sender").innerText = "рд╢реБрднрдХрд╛рдордирд╛рдПрдВ рднреЗрдЬрдиреЗ рд╡рд╛рд▓реЗ: " + username;

      let link = window.location.origin + window.location.pathname + "?name=" + encodeURIComponent(username);
      let imgLink = "https://i.postimg.cc/RFb0rVnV/Lakshmi.jpg";
      let msg = `тЬи рд╢реБрдн рджреАрдкрд╛рд╡рд▓реА тЬи\nрдЖрдкрдХреЗ рдЬреАрд╡рди рдореЗрдВ рдЦреБрд╢рд┐рдпрд╛рдБ рдФрд░ рд╕рдореГрджреНрдзрд┐ рдЖрдПред\nЁЯОЗ Happy Diwali 2025 ЁЯОЗ\n\nрд╢реБрднрдХрд╛рдордирд╛рдПрдВ рднреЗрдЬрдиреЗ рд╡рд╛рд▓реЗ: ${username}\n\nрдЗрд╕ рд▓рд┐рдВрдХ рдХреЛ рдЖрдЧреЗ рд╢реЗрдпрд░ рдХрд░реЗрдВ ЁЯСЗ\n${link}`;

      let shareLink;
      switch (platform) {
        case 'whatsapp':
          shareLink = "https://wa.me/?text=" + encodeURIComponent(msg);
          break;
        case 'facebook':
          // Facebook share рдХреЗ рд▓рд┐рдП URL рдХрд╛ рдЙрдкрдпреЛрдЧ рд╣реЛрддрд╛ рд╣реИ
          shareLink = "https://www.facebook.com/sharer/sharer.php?u=" + encodeURIComponent(link);
          break;
        case 'twitter':
          shareLink = "https://twitter.com/intent/tweet?text=" + encodeURIComponent(msg);
          break;
        case 'telegram':
          shareLink = "https://t.me/share/url?url=" + encodeURIComponent(link) + "&text=" + encodeURIComponent(msg);
          break;
        default:
          return;
      }
      window.open(shareLink, "_blank");
    }
  </script>

